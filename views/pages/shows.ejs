  <div class="renderbox container-fluid">
    <div class="container-fluid toolbox position-sticky sticky-top d-flex flex-column justify-content-end">


      <div class="align-item-center">
        <button type="button" id="signbutton" class="btn btn-success" data-bs-toggle="modal"
          data-bs-target="#exampleModal">
          Add Signature
        </button>

        <button id="downloadbtn" class="btn btn-success" onclick="downloadit()">
          <a href="/down">Download</a>
        </button>

        <button id="savebtn" class="btn btn-success" onclick="saveit()">Save
        </button>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
